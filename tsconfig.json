{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "rootDir": "src",
    "outDir": "lib",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
